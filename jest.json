{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleDirectories": ["<rootDir>/../..", "node_modules"],
  "reporters": ["default"],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1",
    "^script/(.*)$": "<rootDir>/script/$1"
  }
}
